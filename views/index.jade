extends layout
block content
  div(class="center")
    a(href="https://asqisys.com")
      img(src="images/asqi-logo.png",class="img-class")
  div(class="full-height")
    div(class="main-content")
      div(class="vertical-flex")
        div(class="powered-by") Latest as of #{createdDateTime}
        div(class="box")
          span(class) One month forecast for NIFTY
        div(class="box")
          span(class="text-header") #{predictedValue}
        div(class="box2")(style="color:"+color) (#{predictedChange}%)
    div(id='buttonRow' class="row-flex2 successfully-saved")
      button.btn.btn-primary.btn-lg(class='button' type='button' id='option1') Interesting
      button.btn.btn-primary.btn-lg(class='button' type='button' id='option2') I Agree
      button.btn.btn-primary.btn-lg(class='button' type='button' id='option3') I Don't Agree
      button.btn.btn-primary.btn-lg(class='button' type='button' id='option4') You Guys Are Stupid
  //div(class="footer")
    div(class="row-flex")
      div(class="img_cap")
        a(href="https://asqisys.com/fundsage")(target='_blank')
          img(src="images/fs_icon.png",class="img-class2")
          span(class="caption") FUNDSAGE
      div(class="img_cap")
        a(href="https://asqisys.com/debt-fund-alerts/")(target='_blank')
          img(src="images/hawkeye.png",class="img-class2")
          span(class="caption") HAWKEYE
      div(class="img_cap")
        a(href="https://www.leadingedge.asqisys.com/")(target='_blank')
          img(src="images/blog.png",class="img-class2")
          span(class="caption") LEADING EDGE
  script.
    document.getElementById('option1').onclick = handleInput;
    document.getElementById('option2').onclick = handleInput;
    document.getElementById('option3').onclick = handleInput;
    document.getElementById('option4').onclick = handleInput;

